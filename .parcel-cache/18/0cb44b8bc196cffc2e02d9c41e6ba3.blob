*{margin: 0;padding: 0;box-sizing: border-box;}
a{text-decoration: none;}
kbd{border: 1px solid rgb(246, 246, 246);height: 4em;width: 4em;display: inline-block;text-transform: uppercase;
position: relative;
background: linear-gradient(to bottom, rgb(255, 255, 255));
}

kbd > button{
    position: absolute;
    right: 0;
    bottom: 0;
    display: none;
}

kbd:hover > button{
    display: inline-block;
}
#keyboard{
    display: inline-block;
}
main{
    text-align: center;
}
